<div class='form-group'>
    <label for='title'>Title</label>
    <input required value='<%= article.title %>' type='text' name='title' id='title' class='form-control'>
</div>
<div class='form-group'>
    <label for='description'>Description</label>
    <textarea name='description' id='description' cols='30' rows='10' class='form-control'><%= article.description %></textarea>
</div>
<div class='form-group'>
    <label for='markdown'>Markdown</label>
    <textarea required name='markdown' id='markdown' cols='20' rows='10' class='form-control'><%= article.markdown %></textarea>
</div>

<div class='mt-4'>
    <button type='submit' class='btn btn-primary'>Save</button>
    <a href='/' class='btn btn-secondary'>Cancel</a>
</div>
